# ============================================
# APK EXTRACTOR - CONFIGURATION
# ============================================
# Copy to .env and set your values

# ============================================
# GOOGLE ACCOUNT (for auto-login to Play Store)
# ============================================
GOOGLE_EMAIL=your-email@gmail.com
GOOGLE_PASSWORD=your-password

# Note: Use an app-specific password if you have 2FA enabled
# https://myaccount.google.com/apppasswords

# ============================================
# MODE
# ============================================
USE_ORCHESTRATOR=false
DEVICE_AGENT_URL=http://localhost:5001
ORCHESTRATOR_URL=http://localhost:8001

# ============================================
# DEVICE
# ============================================
DEVICE_ID=emulator-5554
AVD_NAME=playstore_device

# ============================================
# TIMEOUTS (seconds)
# ============================================
ADB_TIMEOUT=60
EXTRACTION_TIMEOUT=300
INSTALL_TIMEOUT=180

# ============================================
# CLEANUP
# ============================================
# Auto-uninstall apps after download
AUTO_CLEANUP=true

# Delay before cleanup (seconds) - gives user time to download all files
CLEANUP_DELAY=300

# ============================================
# STORAGE
# ============================================
APK_STORAGE_PATH=./pulls
LOG_PATH=./logs

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
DEBUG=false
