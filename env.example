# ============================================
# APK EXTRACTOR - CONFIGURATION
# ============================================
# Copy this file to .env and modify as needed

# ============================================
# MODE CONFIGURATION
# ============================================
# Mode: "false" for single device, "true" for orchestrator
USE_ORCHESTRATOR=false

# Backend URLs
DEVICE_AGENT_URL=http://localhost:5001
ORCHESTRATOR_URL=http://localhost:8001

# ============================================
# ANDROID / ADB CONFIGURATION
# ============================================
# Device ID for ADB connection
DEVICE_ID=emulator-5554

# ADB command timeout in seconds
ADB_TIMEOUT=60

# Maximum retry attempts for ADB commands
MAX_RETRIES=3

# Delay between retries in seconds
RETRY_DELAY=5

# ============================================
# STORAGE
# ============================================
# APK storage directory
APK_STORAGE_PATH=./pulls

# Log file directory
LOG_PATH=./logs

# ============================================
# TIMEOUTS
# ============================================
# Maximum time for APK extraction in seconds
EXTRACTION_TIMEOUT=300

# Health check timeout in seconds
HEALTH_CHECK_TIMEOUT=10

# Interval for health checks in seconds
HEALTH_CHECK_INTERVAL=60

# ============================================
# ORCHESTRATOR (Phase 2)
# ============================================
# Container URLs (comma-separated)
CONTAINER_URLS=http://localhost:5001,http://localhost:5002,http://localhost:5003

# Number of worker threads
WORKER_THREADS=3

# Result cache expiration in seconds (1 hour)
RESULT_EXPIRATION=3600

# Maximum cached results
MAX_CACHED_RESULTS=1000

# ============================================
# LOGGING
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# DEBUG
# ============================================
# Enable debug mode (DO NOT use in production!)
DEBUG=false
